<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.example.smartattendance.student.Student_Main">

    <TextView
        android:id="@+id/studentMainMenu_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/studentMain"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/studentMainMenu_Submenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentMainMenu_Header" />

    <Button
        android:id="@+id/ReadBtt"
        android:layout_width="272dp"
        android:layout_height="85dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/button_color_green"
        android:onClick="ReadOnClick"
        android:text="@string/scan_nfc_card"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentMainMenu_Submenu" />

    <Button
        android:id="@+id/studentMainMenu_Timetable"
        android:layout_width="272dp"
        android:layout_height="85dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/button_color_green"
        android:text="@string/timetable"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReadBtt" />

    <Button
        android:id="@+id/studentMainMenu_Settings"
        android:layout_width="272dp"
        android:layout_height="85dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/button_color_orange"
        android:text="@string/settings"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentMainMenu_Timetable" />
</androidx.constraintlayout.widget.ConstraintLayout>