<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.smartAttendance.lecturer.LecturePaused">

    <TextView
        android:id="@+id/lecturerClass_Attending_Paused_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="113dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="113dp"
        android:text="@string/lecturerAttending_Paused_Header"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lecturerClass_Attending_Paused_Submenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="154dp"
        android:text="@string/lecturerAttending_Paused_in_class"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecturerClass_Attending_Paused_Header" />

    <Button
        android:id="@+id/lecturerClass_Attending_Paused_Resume"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="62dp"
        android:backgroundTint="@color/button_color_green"
        android:text="@string/lecturerAttending_Paused_resume_class"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecturerClass_Attending_Paused_Submenu"
        tools:textSize="24sp" />

    <Button
        android:id="@+id/lecturerClass_Attending_Paused_End"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="62dp"
        android:backgroundTint="@color/button_color_red"
        android:text="@string/lecturerAttending_Paused_end_class"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecturerClass_Attending_Paused_Resume"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/lecturerClass_Attending_Paused_Notice"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="36sp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="151dp"
        android:text="@string/lecturerAttending_Paused_you_have_paused_the_class_n_nplease_resume_or_end_the_class"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecturerClass_Attending_Paused_End" />
</androidx.constraintlayout.widget.ConstraintLayout>