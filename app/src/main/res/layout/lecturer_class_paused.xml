<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.smartAttendance.lecturer.LecturePaused">

    <TextView
        android:id="@+id/studentClass_Attending_Submenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smart_attendance"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/ContinueLecture"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:text="Continure Lecture"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="343dp"></Button>

    <TextView
        android:id="@+id/studentClass_Attending_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lecturer_menu"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="72dp"></TextView>

    <Button
        android:id="@+id/EndLecture2"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:text="End Lecture"
        android:textColor="#FBC02D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617"></Button>

    <TextView
        android:id="@+id/studentClass_Attending_ClassStatus"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:text="Lecture Paused"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="613dp" />


</androidx.constraintlayout.widget.ConstraintLayout>