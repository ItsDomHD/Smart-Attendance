<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.smartAttendance.student.ClassLeaved">

    <TextView
        android:id="@+id/menu_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smart_attendance"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="264dp" />

    <TextView
        android:id="@+id/menu_user_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student_menu"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="192dp"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="245dp"
        android:layout_height="68dp"
        android:text="You left the Lecture"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="744dp" />

    <Button
        android:id="@+id/EnterAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EnterAgain"
        android:visibility="visible"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="532dp" />

    <Button
        android:id="@+id/TimeOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time out"
        android:visibility="visible"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="532dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="276dp"
        android:layout_height="59dp"
        android:max="50"
        android:progress="5"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="604dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="257dp"
        android:layout_height="58dp"
        android:text="You Have 13:33 min to enter the Lecture again"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="672dp" />

</androidx.constraintlayout.widget.ConstraintLayout>